---
import "../styles/global.css";
import { URL_BASE } from "@/config";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href=`${URL_BASE}/favicon.png` />
    <meta
      name="description"
      content="Descubre cómo prevenir la resistencia bacteriana y el papel clave del farmacéutico en esta lucha. ¡Haz clic aquí y toma acción hoy!"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
