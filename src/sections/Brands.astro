---
import { URL_BASE } from "@/config";

interface Props{
  align?: string;
}

let {align} = Astro.props;
align = align || 'justify-end';
---

<section>
  <div class=`flex flex-col md:flex-row gap-8 p-4 lg:p-8 ${align} max-w-7xl mx-auto items-center`>
    <img class="h-20" src={`${URL_BASE}/img/klaricid.webp`} alt="Logo Klaricid">
  </div>
</section>